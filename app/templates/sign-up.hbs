<div class='page-header'>
  <h1>Sign-up</h1>
</div>

<div class="form-group">

<div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
    {{input type='email' class='form-control' value=email placeholder='email'}}
</div>
<div class="input-group">
    <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
    {{input type='password' class='form-control' value=password placeholder='password'}}
</div>

<button class='btn btn-default' disabled={{v-get model 'isInvalid'}} {{action 'signUp'}}>
    {{fa-icon 'user-plus'}} Sign Up
</button>

<div class="panel panel-danger">  
{{#each model.errors.name as |error|}}
  {{error.message}}
{{/each}}
</div> 
</div>