<div class='page-header'>
  <h1>Sign-up</h1>
</div>

<div class="form-group">

{{input type='text' class='form-control' value=email placeholder='email' }}
  {{#if (v-get model 'email' 'isInvalid')}}
    <div class="error">
      {{v-get model 'email' 'message'}}
    </div>
  {{/if}}

{{input type='password' class='form-control' value=password placeholder='password' }}

<button class='btn btn-default' disabled={{v-get model 'isInvalid'}} {{action 'signUp'}}>
    {{fa-icon 'user-plus'}} Sign Up
</button>
</div>